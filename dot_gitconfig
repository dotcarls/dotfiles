    path = /Users/ticarlso/.config/git/.gitconfig-work-emu

[includeIf "hasconfig:remote.*.url:git@github.com:cisco-sto/**"]
    path = /Users/ticarlso/.config/git/.gitconfig-work-emu

[includeIf "hasconfig:remote.*.url:https://github.com/cisco-sto/**"]
    path = /Users/ticarlso/.config/git/.gitconfig-work-emu

[core]
    editor = code --wait

[diff]
    tool = default-difftool
[difftool "default-difftool"]
    cmd = code --wait --diff $LOCAL $REMOTE

[merge]
    tool = vscode
[mergetool "vscode"]
    cmd = code --wait $MERGED

[pull]
    rebase = true
[submodule]
    recurse = true

[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential "https://github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
